        <TextBox Name="TxtOrderIdToDelete" HorizontalAlignment="Left" Margin="333,138,0,0" TextWrapping="Wrap" Text="order id to del" VerticalAlignment="Top" Width="120"/>
        <Button Name="btnDeleteOrderByID" Content="del order" HorizontalAlignment="Left" Margin="363,178,0,0" VerticalAlignment="Top" Click="btnDeleteOrderByID_Click"/>

    </Grid>
</Window>
