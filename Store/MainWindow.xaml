<Window x:Class="Store.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Store"
        mc:Ignorable="d"
        Title="MainWindow" Height="332" Width="800">
    <Grid>

        <DataGrid Name="Costumer_TB" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="5,5,5,99"/>
        <Button Name="btnEditCustomers" Content="Edit Customers" HorizontalAlignment="Left" Margin="63,246,0,0" VerticalAlignment="Top" Click="btnEditCustomers_Click"/>
        <Button Name="btnViewOrdersForCustomer" Content="View customer's orders" HorizontalAlignment="Left" Margin="188,246,0,0" VerticalAlignment="Top" Click="btnViewOrdersForCustomer_Click"/>
        <Button Name="btnManageOrdersNav" Content="Manage orders" HorizontalAlignment="Left" Margin="435,246,0,0" VerticalAlignment="Top" Click="btnManageOrdersNav_Click"/>
        <Button x:Name="btnNavToEmail" Content="Send email to customer" HorizontalAlignment="Left" Margin="616,246,0,0" VerticalAlignment="Top" Click="btnNavToEmail_Click"/>

    </Grid>

</Window>
